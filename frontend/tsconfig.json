{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES6",
      "ES2015",
      "ES2017",
      "ES2018"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}